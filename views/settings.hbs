{{> menu id="settings"}}

<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui stacked segment form" action="/updateSettings/{{member.id}}" method="POST">
            <h3 class="ui header">Update Settings</h3>
            <div class="two fields">
                <div class="field">
                    <label>Name</label>
                    <input placeholder="Name" type="text" name="name" value="{{member.name}}">
                </div>
                <div class="field">
                    <label>Gender</label>
                    <input placeholder="Gender" type="text" name="gender" value="{{member.gender}}">
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="Email" type="text" name="email" value="{{member.email}}">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" name="password" value="{{member.password}}">
            </div>
            <div class="field">
                <label>Address</label>
                <input placeholder="Address" type="text" name="address" value="{{member.address}}">
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Height (cms)</label>
                    <input placeholder="Height" type="number" name="height" value="{{member.height}}">
                </div>
                <div class="field">
                    <label>Starting Weight (Kgs)</label>
                    <input placeholder="Starting Weight" type="number" name="startingWeight" value="{{member.startingWeight}}">
                </div>
            </div>
            <button class="ui blue submit button">Update</button>
        </form>
    </div>
    <div class="column">
        <img class="ui image" src=" https://memegenerator.net/img/instances/10754983.jpg">
    </div>
</div>